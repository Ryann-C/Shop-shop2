{% extends "base.html.twig" %}

{% block contenu %}

<div class="container">
    <h2>Ajouter un produit</h2>

    <p>{{form.message}}</p>

    <form method="POST">
        <div class="form-group">
            <label for="inputDesignation">Nom du produit :</label>
            <input type="text" class="form-control" id="nom" name="inputDesignation" placeholder="Entrez le nom du produit" required>
        </div>
        <div class="form-group">
            <label for="inputDescription">Description :</label>
            <textarea class="form-control" id="description" name="inputDescription" placeholder="Entrez la description du produit" rows="4" required></textarea>
        </div>
        <div class="form-group">
            <label for="inputPrix">Prix :</label>
            <input type="number" class="form-control" id="prix" name="inputPrix" placeholder="Entrez le prix du produit" required>
        </div>
        <div class="form-group">
            <label for="idType">Type :</label>
            <input type="number" class="form-control" id="idType" name="idType" placeholder="Entre le type de produit" required>
        </div>
        <button type="submit"  name="btAjouter" class="btn btn-primary" onclick="window.location.href='index.php?page=produit'">Ajouter le produit</button><br><br>
        <a class="btn btn-primary" href="index.php?page=produit">Revenir au Produit</a>
    </form>
</div>

{% endblock %}