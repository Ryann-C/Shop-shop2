{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Connexion {% endblock %}
{% block contenu %}
{% if form.valide is defined %}
{% if form.valide == true %}
    <h1 style="center">Connexion r√©ussie</h1>
    <h1 style="center"><a href="index.php?page=connexion">Retourner sur la page d'accueil</a></h1>
{% else %}
    <h1 style="center">Echec de la connexion</h1>
    <h1 style="center">Erreur : {{form.message}}</h1>
    <h1 style="center"><a href="index.php?page=connexion">Retourner sur la page de connexion</a></h1>
{% endif %}
{% else %}
    <div class="formulaire_inscription">
    <form action="index.php?page=connexion" method="post" enctype="application/x-www-form-urlencoded">
        <h1>Connectez-vous sur SHOP-SHOP</h1>
        <label for="inputEmail" class="sr-only">Email:</label>
        <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" required autofocus>
        <label for="inputPassword" class="sr-only">Mot de passe:</label>
        <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Mot de passe" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit" name="btConnexion">Se connecter</button>
    </form>
    </div>
{% endif %}
{% endblock %}